<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp">

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="@dimen/lbtn_mart"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray">

        </RelativeLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:src="@mipmap/s8" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <Switch
                android:id="@+id/item_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:showText="true"
                android:switchMinWidth="40dp"
                android:text=""
                android:textColor="@color/white"
                android:textOff="AND"
                android:textOn="OR"
                android:thumb="@drawable/switch_selector"
                android:track="@drawable/switch_track" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/lt_padding">

            <RelativeLayout
                android:id="@+id/item_btn_f"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/lbtn_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/lbtn_padding"
                android:paddingStart="@dimen/lbtn_padding">

                <TextView
                    android:id="@+id/item_btn_ft"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="@string/search_field"
                    android:textColor="@color/st_fontcolor"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/s7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_btn_s"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/lbtn_mart"
                android:background="@drawable/lbtn_grayborder"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/lbtn_padding"
                android:paddingStart="@dimen/lbtn_padding">

                <TextView
                    android:id="@+id/item_btn_st"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="@string/search_state"
                    android:textColor="@color/st_fontcolor"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/s7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_btn_d"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/lbtn_mart"
                android:background="@drawable/lbtn_grayborder"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/lbtn_padding"
                android:paddingStart="@dimen/lbtn_padding">

                <TextView
                    android:id="@+id/item_btn_dt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="@string/search_district"
                    android:textColor="@color/st_fontcolor"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/s7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_btn_sb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/lbtn_mart"
                android:background="@drawable/lbtn_grayborder"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/lbtn_padding"
                android:paddingStart="@dimen/lbtn_padding">

                <TextView
                    android:id="@+id/item_btn_sbt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="@string/search_subject"
                    android:textColor="@color/st_fontcolor"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/s7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_btn_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/lbtn_mart"
                android:background="@drawable/lbtn_grayborder"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/lbtn_padding"
                android:paddingStart="@dimen/lbtn_padding">

                <TextView
                    android:id="@+id/item_btn_datet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="@string/search_date"
                    android:textColor="@color/st_fontcolor"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/s7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_btn_st"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/lbtn_mart"
                android:background="@drawable/lbtn_grayborder"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/lbtn_padding"
                android:paddingStart="@dimen/lbtn_padding">

                <TextView
                    android:id="@+id/item_btn_stt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="@string/search_stime"
                    android:textColor="@color/st_fontcolor"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/s7" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_btn_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/lbtn_mart"
                android:background="@drawable/lbtn_grayborder"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/lbtn_padding"
                android:paddingStart="@dimen/lbtn_padding">

                <TextView
                    android:id="@+id/item_btn_ett"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="@string/search_etime"
                    android:textColor="@color/st_fontcolor"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/s7" />
            </RelativeLayout>

            <Button
                android:id="@+id/item_btn_del"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/lbtn_mart"
                android:background="@drawable/cbtn_orange"
                android:stateListAnimator="@null"
                android:text="@string/delete" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>