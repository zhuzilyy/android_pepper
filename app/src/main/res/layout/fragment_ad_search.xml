<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cmnbg"
    tools:context=".fragment.AdSearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/lbtn_mart"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/s_state"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lbtn_selector"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/lbtn_padding"
            android:paddingEnd="@dimen/lbtn_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/search_state"
                android:textColorHint="@color/st_fontcolor"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/s7"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/s_dist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lbtn_grayborder"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/lbtn_mart"
            android:paddingStart="@dimen/lbtn_padding"
            android:paddingEnd="@dimen/lbtn_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_dist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/search_district"
                android:textColorHint="@color/st_fontcolor"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/s7"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/s_subj"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lbtn_grayborder"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/lbtn_mart"
            android:paddingStart="@dimen/lbtn_padding"
            android:paddingEnd="@dimen/lbtn_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_subj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/search_subject"
                android:textColorHint="@color/st_fontcolor"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/s7"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/s_pepc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lbtn_grayborder"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/lbtn_mart"
            android:paddingStart="@dimen/lbtn_padding"
            android:paddingEnd="@dimen/lbtn_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_pepc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/search_peppercourses"
                android:textColorHint="@color/st_fontcolor"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/s7"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/s_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lbtn_grayborder"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/lbtn_mart"
            android:paddingStart="@dimen/lbtn_padding"
            android:paddingEnd="@dimen/lbtn_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/search_date"
                android:textColorHint="@color/st_fontcolor"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/s7"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btmbtn_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange"
            android:stateListAnimator="@null"
            android:text="@string/reset"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:stateListAnimator="@null"
            android:text="@string/search"
            android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>